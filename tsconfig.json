{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist/",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceRoot": "./src",
    "typeRoots": [
      "./node_modules/@types",
    ]
  },
  "exclude": [
    "./dist/*",
    "./node_modules/*"
  ]
}
